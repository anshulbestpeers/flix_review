<div class="center">
  <h2 style="color: white;">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :name, style: "color: white;" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", style: "color: black;" %>
    </div>

    <div class="field">
      <%= f.label :email, style: "color: white;" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "color: black;" %>
    </div>

    <div class="field">
      <%= f.label :password, style: "color: white;" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", style: "color: black;" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, style: "color: white;" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "color: black;" %>
    </div><br>

    <div class="actions">
      <%= f.submit "Sign up", style: "color: black;" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
