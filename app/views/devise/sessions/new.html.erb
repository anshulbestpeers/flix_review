<div class="center">
  <h1 style="color: white;">Login Page</h1>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, style: "color: white;" %><br />
      <%= f.email_field :email, autofocus: true, style: "color: black;" %>
    </div>

    <div class="field">
      <%= f.label :password, style: "color: white;" %><br />
      <%= f.password_field :password, autocomplete: "current-password", style: "color: black;" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, style: "color: white;" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", style: "color: black;" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
