<div class="reviews-container-left">
<h1 class="black-heading"> Write Review Here </h1>

<%= form_for [@movie,@review] do |form| %>
  <div>
    <%= form.label :body, style: "color: white" ; %><br>
    <%= form.text_area :body%>
  </div>

  <div>
    <%= form.label :star, style: "color: white" ; %><br>
    <%= form.number_field :star, in: 0..5, step: 0.5 %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
</div>